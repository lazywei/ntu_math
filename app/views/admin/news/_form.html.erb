<%= simple_form_for([:admin, @admin_news]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content, :hint => '可直接貼上 YouTube 連結、圖片連結、以及網址連結！', 
      :input_html => {:rows => 10} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
